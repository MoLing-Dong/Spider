# AI早报生成器配置文件
# 复制此文件为 .env 并填写实际的配置值

# ========== AI配置 ==========
# 智谱AI API密钥
ZHIPU_API_KEY=your_zhipu_api_key_here

# 智谱AI API基础URL（可选，有默认值）
ZHIPU_BASE_URL=https://open.bigmodel.cn/api/paas/v4

# AIBase新闻列表URL（可选，有默认值）
AIBASE_LIST_URL=https://www.aibase.com/zh/news/

# ========== Gitea配置 ==========
# Gitea地址
GITEA_BASE_URL=https://gitea.waimaogongshe.cn

# Gitea API Token
GITEA_API_TOKEN=your_gitea_api_token_here

# 仓库拥有者
GITEA_OWNER=moling.wei

# 仓库名
GITEA_REPO=AI-api

# 提交作者名字
GITEA_AUTHOR_NAME=moling.wei

# 提交作者邮箱
GITEA_AUTHOR_EMAIL=moling.wei@waimaogongshe.cn

# 分支名
GITEA_BRANCH=main

# ========== 其他配置 ==========
# 默认抓取小时数
DEFAULT_HOURS=24

# 默认最大文章数
DEFAULT_MAX_ARTICLES=40

# 请求超时时间（秒）
REQUEST_TIMEOUT=15

# 每批抓取数量
BATCH_SIZE=5

# 最小请求延迟（秒）
MIN_DELAY=0.5

# 最大请求延迟（秒）
MAX_DELAY=1.5

# 最小批次延迟（秒）
MIN_BATCH_DELAY=2.0

# 最大批次延迟（秒）
MAX_BATCH_DELAY=4.0
